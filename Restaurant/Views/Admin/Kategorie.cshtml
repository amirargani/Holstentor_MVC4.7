@model  IEnumerable<Restaurant.Models.Domin.Tbl_Kategorie>
@{
    ViewBag.Title = "Meine Verwaltung | Kategorie";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Restaurant.Models.Repository.HomeRep ivm = new Restaurant.Models.Repository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@Html.Partial("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Meine Verwaltung</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">Kategorie</h5>
                        <div class="tab-content py-3 px-3 px-sm-0">
                            <div class="tab-pane fade show active">
                                <!-- Pagination -->
                                <div class="col-12">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <li><a class="btn btn-success mr-3" href="/Admin/KategorieErstellen"><i class="fas fa-plus-circle mr-2"></i>Hinzufügen</a></li>
                                            <li><a class="btn btn-secondary mr-3" href="/Admin"><i class="fas fa-chevron-circle-left mr-2"></i>Meine Verwaltung</a></li>
                                        </ul>
                                    </nav>
                                </div>
                                <!-- End of Pagination -->
                                <div class="p-5">
                                    <div class="table-responsive mb-2">
                                        <table class="table table-light text-center">
                                            <thead>
                                                <tr class="bg-web text-white font-weight-bold" style="font-size: 0.73rem !important;">
                                                    <th>#</th>
                                                    <th>Kategoriename</th>
                                                    <th>Beschreibung</th>
                                                    @*<th>Schriftart</th>*@
                                                    <th><span class="text-success">Aktiv</span>/<span class="text-danger">Inaktiv</span></th>
                                                    @*<th><i class="fas fa-check text-success"></i>/<i class="fas fa-times text-danger"></i></th>*@
                                                    <th><i class="fas fa-edit text-warning"></i></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int i = 1;
                                                    if (Model.Count() > 0)
                                                    {
                                                        foreach (var item in Model)
                                                        {
                                                            string bg = "";
                                                            if (item.ActivePassive == false)
                                                            {
                                                                bg = "background-color: #ffeaed;";
                                                            }
                                                            <tr class="font-weight-bold" style="font-size: 0.83rem !important; @bg">
                                                                <td>@i</td>
                                                                <td>@item.TitleCategory</td>
                                                                <td>@item.Description</td>
                                                                @*<td>@item.FontName</td>*@
                                                                @*<td>@item.ActivePassive</td>*@
                                                                <td>
                                                                    @{
                                                                        if (item.ActivePassive == false)
                                                                        {
                                                                            @*<a href="/Admin/KategorieAktiv?id=@item.ID" class="btn btn-success" style="width: 50px;"><i class="fas fa-check"></i></a>*@
                                                                            <form class="" action="/Admin/KategorieAktiv" method="post">
                                                                                <input type="hidden" for="@item.ID" name="ID" value="@item.ID" />
                                                                                <button type="submit" class="btn btn-success" style="width: 50px;"><i class="fas fa-check"></i></button>
                                                                            </form>
                                                                        }
                                                                        else
                                                                        {
                                                                            @*<a href="/Admin/KategorieInaktiv?id=@item.ID" class="btn btn-danger" style="width: 50px;"><i class="fas fa-times"></i></a>*@
                                                                            <form class="" action="/Admin/KategorieInaktiv" method="post">
                                                                                <input type="hidden" for="@item.ID" name="ID" value="@item.ID" />
                                                                                <button type="submit" class="btn btn-danger" style="width: 50px;"><i class="fas fa-times"></i></button>
                                                                            </form>
                                                                        }
                                                                    }
                                                                </td>
                                                                <td>
                                                                    <form class="" action="/Admin/KategorieBearbeiten" method="post">
                                                                        <input type="hidden" for="@item.ID" name="id" value="@item.ID" />
                                                                        <button type="submit" class="btn btn-warning"><i class="fas fa-edit"></i></button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                            i = i + 1;
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td class="bg-danger text-white" colspan="6">-</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                        <!-- Pagination -->
                                        <div class="col-12">
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    @{
                                                        if (Model.Count() > 0)
                                                        {
                                                            ViewBag.TakeNumber = ViewData["CategoryTakeNumber"];
                                                            if (Model.Count() >= ViewBag.TakeNumber) { }
                                                            ViewBag.CountCategory = ViewData["CategoryCount"];
                                                            double Take = ViewBag.TakeNumber;
                                                            double Count = ViewBag.CountCategory;
                                                            double Div = Math.Ceiling(Count / Take);
                                                            for (int j = 1; j <= Div; j++)
                                                            {
                                                                //string ac = "";
                                                                string di = "";
                                                                string bg = "";
                                                                string tx = "";
                                                                string cu = "pointer";

                                                                if (ViewBag.CategoryPage == j)
                                                                {
                                                                    //ac = "active";
                                                                    di = "disabled";
                                                                    bg = "bg-dark";
                                                                    tx = "text-white";
                                                                    cu = "not-allowed";
                                                                }
                                                                <li class="page-item @di"><a class="page-link @bg @tx" href="/Admin/Kategorie?page=@j.ToString()" style="cursor:@cu">@j.ToString()</a></li>
                                                            }
                                                        }
                                                    }
                                                </ul>
                                            </nav>
                                        </div>
                                        <!-- End of Pagination -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1600"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
</main>
<!-- End of Main Content -->
@Html.Partial("P_Footer")