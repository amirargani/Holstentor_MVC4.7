@{
    ViewData["Title"] = "Impressum | Restaurant am Holstentor Lübeck";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Restaurant.Models.Repository.HomeRep ivm = new Restaurant.Models.Repository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

<!-- Header -->
@Html.Partial("P_HeaderBG")
<!-- End of Header -->
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web mt-5" data-aos="fade-down" data-aos-duration="1000">@qivm.NameSite</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">Impressum</h5>
                        <hr />
                        <h5 class="text-black mb-2" data-aos="fade-up" data-aos-duration="1200"><i class="zmdi zmdi-map zmdi-hc-fw mr-1"></i>@qivm.Street @qivm.Number / @qivm.PostCode @qivm.City</h5>
                        <h5 class="text-black mb-2" data-aos="fade-up" data-aos-duration="1300"><i class="zmdi zmdi-phone zmdi-hc-fw mr-1"></i><b>Telefonnummer: </b>@qivm.PhoneNumber</h5>
                        <h5 class="text-black mb-2" data-aos="fade-left" data-aos-duration="1400"><i class="zmdi zmdi-email zmdi-hc-fw mr-1"></i><b>E-Mail-Adresse: </b>smesgarha@yahoo.de</h5>
                        <h5 class="text-black mb-2" data-aos="fade-left" data-aos-duration="1500"><b>Persönlich haftender Gesellschafter:</b><br />S. Mesgarha</h5>
                        <h5 class="text-black mb-2" data-aos="fade-right" data-aos-duration="1600"><b>Registergericht:</b><br />Amtsgericht Lübeck</h5>
                        <h5 class="text-black mb-2" data-aos="fade-right" data-aos-duration="1700"><b>Registernr:</b><br />Umsatzsteuer-ID: 2228817551</h5>
                        <hr />
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1800"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@Html.Partial("P_Footer")