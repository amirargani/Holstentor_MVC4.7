@{
    Restaurant.Models.Repository.HomeRep ivm = new Restaurant.Models.Repository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
    var qupload = ivm.GetHochladen();
    var qcategory = ivm.GetCategoryLink().ToList();
    string tel = qivm.PhoneNumber.Replace("/", "").ToString();
}

<!-- Footer -->
<footer class="footer text-white" style="background-image: url(../wwwroot/assets/img/backgrounds/upload/footer/@qupload.ImageFooter); background-position: center;">
    <div class="container d-flex h-100">
        <div class="row flex-grow-1">
            <div class="col-lg-3 pt-3 ext-l @*bg-secondary*@ text-center text-lg-left">
                <div class="d-flex flex-column h-100">
                    <div class="pt-5 pt-lg-8 pb-4">
                        <p class="mb-4 mt-3 fs--1"><i class="zmdi zmdi-map zmdi-hc-fw mr-1"></i>@qivm.Street @qivm.Number<br />@qivm.PostCode @qivm.City<br />@qivm.Country</p>
                        <p class="fs--1">
                            <a href="tel:@tel" class="text-white"><i class="zmdi zmdi-phone zmdi-hc-fw mr-1"></i>@qivm.PhoneNumber</a><br />
                            <a href="mailto:@qivm.Email" class="text-white"><i class="zmdi zmdi-email zmdi-hc-fw mr-1"></i>@qivm.Email</a>
                        </p>
                        <p class="mb-4 mt-3 fs--1"><i class="fab fa-instagram zmdi-hc-fw mr-1"></i><a href="https://www.instagram.com/restaurant_am_holstentor/" class="text-white" target="_blank">Instagram<br />Restaurant am Holstentor Lübeck</a></p>
                    </div>
                </div>
            </div>
            <div class="col d-flex flex-column mb-2 mt-3 pl-lg-7">
                <div class="row pt-5 pt-lg-8 pb-4 pb-lg-6">
                    <div class="col-12 col-lg-6 col-md-6">
                        <h6 class="mb-1 mb-lg-4"><a href="/" class="text-white"><i class="fas fa-home zmdi-hc-fw mr-1"></i>Start</a></h6>
                        <ul class="pt-2 mb-5 fw-light list-unstyled">
                            <li class="my-1"><a href="/Home/Galerie" class="text-white"><i class="fas fa-images zmdi-hc-fw mr-1"></i>Galerie</a></li>
                            <li class="my-1"><a href="/Home/Kontakt" class="text-white"><i class="fas fa-map-signs zmdi-hc-fw mr-1"></i>Kontakt</a></li>
                            <li class="my-1"><a href="/Home/Ueberuns" class="text-white"><i class="fas fa-info-circle zmdi-hc-fw mr-1"></i>Über uns</a></li>
                            <li class="my-1"><a href="#Landkarte" data-toggle="modal" data-target="#Landkarte" class="text-white"><i class="fas fa-map-marker-alt zmdi-hc-fw mr-1"></i>Landkarte</a></li>
                        </ul>
                    </div>
                    <div class="col-12 col-lg-6 col-md-6">
                        @*<h6 class="mb-1 mb-lg-4"><a href="/Home/Menue" class="text-white"><i class="fas fa-list zmdi-hc-fw mr-1"></i>Menü</a></h6>*@
                        <ul class="pt-2 mb-5 fw-light list-unstyled">
                            @foreach (var item in qcategory)
                            {
                                if (item.ActivePassive == true) /*|| item.ActivePassive == false*/
                                {
                                    if (item.FontName == null || item.FontName == "")
                                    {
                                        <li class="my-1"><a href="/Home/Kategoriesuche?id=@item.Link" class="text-white"><i class="fas fa-th-list zmdi-hc-fw mr-1"></i>@item.TitleCategory</a></li>
                                    }
                                    else
                                    {
                                        <li class="my-1"><a href="/Home/Kategoriesuche?id=@item.Link" class="text-white"><i class="@item.FontName zmdi-hc-fw mr-1"></i>@item.TitleCategory</a></li>
                                    }
                                }
                            }
                        </ul>
                    </div>
                </div>
                <div class="mt-auto d-flex justify-content-between">
                    <span class="fs--3 fs-lg--2">&copy; @qivm.NameSite @DateTime.Now.Year @*- Web-designer: Restaurant am Holstentor*@</span>
                    <div class="fs--3 fs-lg--2"><a href="/Home/Impressum" class="mr-1 text-white">Impressum</a>|<a href="/Home/Datenschutz" class="ml-1 text-white">Datenschutz</a></div>
                </div>
            </div>
        </div>
    </div>
</footer>
<!-- End of Footer -->