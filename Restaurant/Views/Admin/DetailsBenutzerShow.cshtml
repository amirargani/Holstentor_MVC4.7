@model  IEnumerable<Restaurant.Models.Domin.Tbl_Users>
@{
    ViewBag.Title = "Meine Verwaltung | Benutzer anzeigen";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Restaurant.Models.Repository.HomeRep ivm = new Restaurant.Models.Repository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@Html.Partial("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Meine Verwaltung</h1>
                        @foreach (var item in Model.OrderByDescending(a => a.Date))
                        {
                            if (item.Name != null)
                            {
                                <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">Name: (@item.Name @item.NameFamily)</h5>
                            }
                            if (item.Name == null)
                            {
                                <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">E-Mail-Adresse: (@item.Email)</h5>
                            }
                        }
                        <div class="tab-content py-3 px-3 px-sm-0">
                            <div class="tab-pane fade show active">
                                <!-- Pagination -->
                                <div class="col-12">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <li><a class="btn btn-secondary mr-3" href="/Admin/DetailsBenutzer"><i class="fas fa-chevron-circle-left mr-2"></i>Zurück</a></li>
                                        </ul>
                                    </nav>
                                </div>
                                <!-- End of Pagination -->
                                <div class="p-5">
                                    <div class="table-responsive mb-2">
                                        <table class="table table-light text-center">
                                            <thead>
                                                <tr class="bg-web text-white font-weight-bold" style="font-size: 0.73rem !important;">
                                                    <th>#</th>
                                                    <th>Vorname</th>
                                                    <th>Familienname</th>
                                                    <th>E-Mail</th>
                                                    <th>Telefonnummer</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int i = 1;
                                                    if (Model.Count() > 0)
                                                    {
                                                        foreach (var item in Model)
                                                        {
                                                            string bg = "";
                                                            if (item.EmailConfirmed == false)
                                                            {
                                                                bg = "background-color: #ffeaed;";
                                                            }
                                                            <tr class="font-weight-bold" style="font-size: 0.83rem !important; @bg">
                                                                <td>@i</td>
                                                                <td>@item.Name</td>
                                                                <td>@item.NameFamily</td>
                                                                <td>@item.Email</td>
                                                                <td>@item.PhoneNumber</td>
                                                            </tr>
                                                            i = i + 1;
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td class="bg-danger text-white" colspan="5">-</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1600"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
</main>
<!-- End of Main Content -->
@Html.Partial("P_Footer")