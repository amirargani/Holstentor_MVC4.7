@model IEnumerable<Restaurant.Models.ViewModels.CategoryViewModel>
@{
    ViewBag.Title = "Meine Verwaltung | Kategorie auswählen";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Restaurant.Models.Repository.HomeRep ivm = new Restaurant.Models.Repository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@Html.Partial("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Meine Verwaltung</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">Kategorie auswählen</h5>
                        <div class="tab-content py-3 px-3 px-sm-0">
                            <div class="tab-pane fade show active">
                                <!-- Pagination -->
                                <div class="col-12">
                                    <nav aria-label="Page navigation example">
                                        <ul class="pagination">
                                            <li><a class="btn btn-secondary mr-3" href="/Admin/Produkte"><i class="fas fa-chevron-circle-left mr-2"></i>Zurück</a></li>
                                        </ul>
                                    </nav>
                                </div>
                                <!-- End of Pagination -->
                                <form class="col px-5 px-lg-8 py-6 py-lg-0 mt-3" action="/Admin/ProduktErstellen" method="post">
                                    <div class="form-group mb-4">
                                        <label class="">Kategoriename:</label>
                                        <select class="form-control p-1" name="id">
                                            @foreach (var item in Model.OrderByDescending(a => a.TitleCategory))
                                            {
                                                <option value="@item.ID">@item.TitleCategory</option>
                                            }
                                        </select>
                                    </div>
                                    <button type="submit" class="btn btn-lg btn-success btn-block mb-4 mt-4 text-capitalize">Hinzufügen<i class="fas fa-folder-plus ml-2"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1600"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
</main>
<!-- End of Main Content -->
@Html.Partial("P_Footer")