@model Restaurant.Models.Domin.Tbl_Index
@{
    ViewBag.Title = "Meine Verwaltung | Startseite";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    Restaurant.Models.Repository.HomeRep ivm = new Restaurant.Models.Repository.HomeRep();
    var qivm = ivm.GetIndexHeaderSelect();
}

@Html.Partial("P_HeaderBG")
<!-- Main Content -->
<main class="main">
    <!-- Section -->
    <section class="py-0">
        <div class="bg-web">
            <!-- Section -->
            <section class="py-0 pb-3">
                <div class="jumbotron jumbotron-fluid bg-rosa py-7">
                    <div class="container">
                        <h1 class="text-web fs-3 fs-lg-5 mt-5" data-aos="fade-down" data-aos-duration="1000">Meine Verwaltung</h1>
                        <h5 class="text-black mb-2" data-aos="fade-down" data-aos-duration="1100">@*<b>Startseite: </b>*@Bearbeiten Sie die Informationen</h5>
                        <div class="tab-content py-3 px-3 px-sm-0">
                            <!-- Pagination -->
                            <div class="col-12">
                                <nav aria-label="Page navigation example">
                                    <ul class="pagination">
                                        <li><a class="btn btn-secondary mr-3" href="/Admin"><i class="fas fa-chevron-circle-left mr-2"></i>Meine Verwaltung</a></li>
                                    </ul>
                                </nav>
                            </div>
                            <!-- End of Pagination -->
                            <div class="tab-pane fade show active">
                                <form class="col px-5 px-lg-8 py-6 py-lg-0 mt-3" action="/Admin/StartseiteConfirmed" method="post">
                                    <input type="hidden" for="@Model.IDIndex" name="id" value="@Model.IDIndex" />
                                    <input type="hidden" for="@Model.IDIndex" name="IDIndex" value="@Model.IDIndex" />
                                    <div class="form-group mb-4">
                                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control form-control-lg", @placeholder = "Titel", @Value = @Model.Title } })
                                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-4">
                                        @Html.TextAreaFor(model => model.TypedText1, new { @class = "form-control", @rows = "3", @placeholder = "Untertitel-1", @Value = @Model.TypedText1 })
                                        @Html.ValidationMessageFor(model => model.TypedText1, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-4">
                                        @Html.TextAreaFor(model => model.TypedText2, new { @class = "form-control", @rows = "3", @placeholder = "Untertitel-2", @Value = @Model.TypedText2 })
                                        @Html.ValidationMessageFor(model => model.TypedText2, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-4 ">
                                        @Html.TextAreaFor(model => model.TypedText3, new { @class = "form-control", @rows = "3", @placeholder = "Untertitel-3", @Value = @Model.TypedText3 })
                                        @Html.ValidationMessageFor(model => model.TypedText3, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-4">
                                        @Html.TextAreaFor(model => model.TypedText4, new { @class = "form-control", @rows = "3", @placeholder = "Untertitel-4", @Value = @Model.TypedText4 })
                                        @Html.ValidationMessageFor(model => model.TypedText4, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group mb-4">
                                        @Html.TextAreaFor(model => model.TypedText5, new { @class = "form-control", @rows = "3", @placeholder = "Untertitel-5", @Value = @Model.TypedText5 })
                                        @Html.ValidationMessageFor(model => model.TypedText5, "", new { @class = "text-danger" })
                                    </div>
                                    <button type="submit" class="btn btn-lg btn-success btn-block mb-4 text-capitalize">Bearbeiten<i class="fas fa-edit ml-2"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <h5 class="text-white mb-2 text-center" data-aos="fade-up" data-aos-duration="1200"><b>@qivm.NameSite</b></h5>
            </section>
            <!-- End of Section -->
        </div>
    </section>
    <!-- End of Section -->
</main>
<!-- End of Main Content -->
@Html.Partial("P_Footer")